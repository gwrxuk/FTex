# FTex Worker Environment Configuration
# ======================================

# Rails
RAILS_ENV=production
RAILS_LOG_LEVEL=info
SECRET_KEY_BASE=your_secret_key_base_here

# Database
DATABASE_HOST=postgres
DATABASE_USER=ftex
DATABASE_PASSWORD=ftex_secret
DATABASE_NAME=ftex_db

# Redis (for Sidekiq)
REDIS_URL=redis://redis:6379/1

# FTex Backend API
FTEX_API_URL=http://backend:8000

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ftex_secret

# OpenSearch
OPENSEARCH_URL=http://opensearch:9200

# Kafka
KAFKA_BROKERS=kafka:9092

# Sidekiq
RAILS_MAX_THREADS=10
WEB_CONCURRENCY=2

# Monitoring (optional)
SENTRY_DSN=

# Security
ALLOWED_HOSTS=localhost,ftex-worker
FORCE_SSL=false

