# FTex Decision Intelligence Platform
# Environment Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# Application Settings
# ===========================================
APP_NAME=FTex
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# Database - PostgreSQL
# ===========================================
DATABASE_URL=postgresql://ftex:ftex_secret@postgres:5432/ftex_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Local development (without Docker)
# DATABASE_URL=postgresql://ftex:ftex_secret@localhost:5432/ftex_db

# ===========================================
# Cache - Redis
# ===========================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# ===========================================
# Search - OpenSearch
# ===========================================
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_INDEX_PREFIX=ftex

# ===========================================
# Graph Database - Neo4j
# ===========================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ftex_secret

# ===========================================
# Data Processing - Spark
# ===========================================
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_APP_NAME=FTex

# ===========================================
# Message Queue - Kafka
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_GROUP_ID=ftex-consumers

# ===========================================
# Security & Authentication
# ===========================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:80","http://127.0.0.1:3000"]

# ===========================================
# Frontend Settings
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api

